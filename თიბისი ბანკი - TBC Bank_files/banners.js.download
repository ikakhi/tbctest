(function($) { 
	$(function(){
		
		$(document).ready(function(){
			 if ( $(window).width() > 568) {
				 
				$(".journal-content-article").on("mouseenter mouseover",".banner-btm-over", function(){
					$.bannerHoverShow(this);
				}).on("mouseleave mouseout",".banner-btm-over", function(){
					$.bannerHoverHide(this);
				});
				
				$(".journal-content-article").on("click",".bPlus", function(e){
					e.stopPropagation();
					e.preventDefault();
					
					$.bannerHoverShow($(this).parents(".special-hover-plus").find(".banner-btm-over"));
				});
				
				$(".journal-content-article").on("click",".wc-close-btn", function(e){
					e.stopPropagation();
					e.preventDefault();
					
					$.bannerHoverHide($(this).parents(".special-hover-plus").find(".banner-btm-over"));
				});
			 };
			/* show hidden hover area with content over the banner */
			$.bannerHoverShow = function(object) {
				var _obj = object;
				// hide banner desc
				$(_obj).prev().stop(true,true).fadeOut(100, function(){
					
					// resize bottom banner text background
					$.bannerBgShowHide(_obj, "on");
					
				});
			};
			
			/* hide hover area with content over the banner */
			$.bannerHoverHide = function(object) {
				var _obj = object;

				// show banner desc
				$(_obj).parent().find(".banner-desc-hover").stop(true,true).fadeOut("fast", function(){
					
					// resize bottom banner text background
					$.bannerBgShowHide(_obj, "off");
				
				});
			};
			
			/* animation banner control */
			$.bannerBgShowHide = function(object, onOff) {
				
				object = $(object).parent();
					
				// bottom banner
				var bannerBtmBg = $(object).find(".banner-btm-bg");
				
				// banner size
				var bannerWidth = $(object).find(".bImg").width();
				var bannerHeight = $(object).find(".bImg").height();
				
				// bottom over element 
				var bannerBtmOver = $(object).find(".banner-btm-over");
				
				// on
				if (onOff == "on") {
					// set rounded corners
					$(bannerBtmBg).css({"border-radius" : "15px"});
					
					// resize to banner size
					$(bannerBtmOver).css({"height": bannerHeight});
					
					// animate bottom footer background
					$(bannerBtmBg).stop().animate(
							{
								height: bannerHeight
							}, 
							{
								duration: "slow",
								easing: 'easeInBack',
								complete: function() {
									// show close btn and hidden content
									$(object).find(".banner-desc-hover").fadeIn("slow");
								}
					});
					
					
				} else {
					// remove top rounded corners
					$(bannerBtmBg).css({"border-radius" : "0 0 15px 15px"});
					
					// resize to start size
					$(bannerBtmOver).css({"height": Number($(object).find(".banner-btm-height").html())});
					
					$(bannerBtmBg).stop().animate(
							{
								height: Number($(object).find(".banner-btm-height").html())
							}, 
							{
								duration: 300,
								easing: 'linear',
								complete: function() {
									// hide close btn and hidden content
									$(object).find(".banner-desc").fadeIn("slow");
								}
					});
					
				}
			};
			
		});
	});

})(jQuery);