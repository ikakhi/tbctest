;(function($){
	
    // Convenience vars for accessing elements
    var _bodySelectors = '#wrapper, #responsive-navbar, #brand-header, #footer, #footer2, #animatedHeaderWrapper',
        $pageslide = $('#pageslide'),
        $menuEl = $();
    
    var _isOpen = false,
    	_sliding = false,   // Mutex to assist closing only once
        _pageSlideWidth = $(window).width();
            
	// If the pageslide element doesn't exist, create it
    if( $pageslide.length == 0 ) {
         $pageslide = $('<div />').attr( 'id', 'pageslide' )
                                  .css( 'display', 'none' )
                                  .appendTo( $('body') );
    }
    
    /*
     * Private methods 
     */
    function _load( url, useIframe ) {
        // Are we loading an element from the page or a URL?
        if ( url.indexOf("#") === 0 ) {                
            // Load a page element                
            $(url).clone(true).appendTo( $pageslide.empty() ).show();
            
            // add navigation for main menu
            if (url == "#navigation") {
            	$pageslide.children("#navigation").after($("#lang-switch-part").clone());
            	// hide web content search
            	$pageslide.children("#navigation").find("#p_p_id_77_").hide();
                $pageslide.children("#navigation").find("#p_p_id_quicklinks_WAR_tbcpwquicklinksportlet_ .all-quick-icons").hide();            
            	
            } else if (url == "#quick-links-navigation") {
            	$pageslide.children("#quick-links-navigation").after($("#p_p_id_77_").clone().show());
            	$pageslide.children("#quick-links-navigation").before($("#p_p_id_quicklinks_WAR_tbcpwquicklinksportlet_ .all-quick-icons").clone().show());
            }
            
        } else {
            // Load a URL. Into an iframe?
            if( useIframe ) {
                var iframe = $("<iframe />").attr({
                                                src: url,
                                                frameborder: 0,
                                                hspace: 0
                                            })
                                            .css({
                                                width: "100%",
                                                height: "100%"
                                            });
                
                $pageslide.html( iframe );
            } else {
                $pageslide.load( url );
            }
            
            $pageslide.data( 'localEl', false );
            
        }
    }
    
    // Function that controls opening of the pageslide
    function _start( direction, speed, customFn) {
        _pageSlideWidth = $(window).width();
        var slideWidth = _pageSlideWidth - $pageslide.data('positionModifier'),
            bodyAnimateIn = {},
            slideAnimateIn = {};
        
        
        // If the slide is open or opening, just ignore the call
        if(_isOpen || _sliding ) return;	        
        _sliding = true;
        _isOpen = true;
                                                                    
        switch( direction ) {
            case 'left':
                $pageslide.css({ left: 'auto', right: '-' + slideWidth + 'px', width: (slideWidth) + 'px' });
                bodyAnimateIn['margin-left'] = '-' + slideWidth;
                slideAnimateIn['right'] = '0';
                break;
            default:
                $pageslide.css({ left: '-' + slideWidth + 'px', right: 'auto', width: (slideWidth) + 'px' });
                bodyAnimateIn['margin-left'] = '+' + slideWidth;
                slideAnimateIn['left'] = '0';
                break;
        }
                    
        // Animate the slide, and attach this slide's settings to the element
        $(_bodySelectors).animate(bodyAnimateIn, speed, "swing");
        $pageslide.show()
                  .animate(slideAnimateIn, speed, "swing", function() {
                      _sliding = false;
                      
                   // run custom function after
                   	if( typeof customFn !== 'undefined' ) eval(customFn);
                  });
    }
      
    /*
     * Declaration 
     */
    $.fn.pageslide = function(options) {
        var $elements = this;
        
        _pageSlideWidth = $(window).width();
        
        // On click
        $elements.click( function(e) {
            var $self = $(this),
                settings = $.extend({ href: $self.attr('href') }, options);
            
            // Prevent the default behavior and stop propagation
            e.preventDefault();
            e.stopPropagation();
            
            $menuEl = $self;
            
            if (_isOpen) {
                // If we clicked the same element twice, toggle closed
                $.pageslide.close();
            } else {                 
                // Open
                $.pageslide( settings );
            }       
        });                   
	};
	
	/*
     * Default settings 
     */
    $.fn.pageslide.defaults = {
        speed:      200,        // Accepts standard jQuery effects speeds (i.e. fast, normal or milliseconds)
        direction:  'right',    // Accepts 'left' or 'right'
        modal:      false,      // If set to true, you must explicitly close pageslide using $.pageslide.close();
        iframe:     true,       // By default, linked pages are loaded into an iframe. Set this to false if you don't want an iframe.
        href:       null,       // Override the source of the content. Optional in most cases, but required when opening pageslide programmatically.
     	beforeStart: null,		// custom function executed before slide
        afterStart:	 null,		// custom function executed after slide
        positionModifier: 10 	// if slide is open, leave small part of page visible
    };
	
	/*
     * Public methods 
     */
	
	// Open the pageslide
	$.pageslide = function( options) {	    
	    // Extend the settings with those the user has provided
        var settings = $.extend({}, $.fn.pageslide.defaults, options);
	    
	    // Are we trying to open in different direction?
        if(_isOpen && $pageslide.data( 'direction' ) != settings.direction) {
            $.pageslide.close(function(){
            	
		        $pageslide.data( settings );
		        
                _load( settings.href, settings.iframe );
                _start( settings.direction, settings.speed, settings.afterStart);
            });
        } else {                
            _load( settings.href, settings.iframe );
            if(!_isOpen) {
            	
                $menuEl.addClass('menu-open');

			    // run custom function first
		        if( typeof settings.beforeStart !== 'undefined' ) eval(settings.beforeStart);
		        $pageslide.data( settings );
		        
                _start( settings.direction, settings.speed, settings.afterStart);
                
            }
        }
        
	};
	
	// Close the pageslide
	$.pageslide.close = function( callback ) {
		
        var $pageslide = $('#pageslide'),
            slideWidth = _pageSlideWidth - $pageslide.data('positionModifier'),
            speed = $pageslide.data( 'speed' ),
            bodyAnimateIn = {},
            slideAnimateIn = {};
            	        
        // If the slide isn't open, just ignore the call
        if(!_isOpen || _sliding ) return;	        
        _sliding = true;
        _isOpen = false;
        $menuEl.removeClass('menu-open');
        
        switch( $pageslide.data( 'direction' ) ) {
            case 'left':
                bodyAnimateIn['margin-left'] = '0';
                slideAnimateIn['right'] = '-' + slideWidth + 'px';
                break;
            default:
				bodyAnimateIn['margin-left'] = '0';
                slideAnimateIn['left'] = '-' + slideWidth + 'px';
                break;
        }
        
        // run custom function first                                                                                           
        var bStart = $pageslide.data( 'beforeStart' );
        if( typeof bStart !== 'undefined' ) eval(bStart);
        
        $pageslide.animate(slideAnimateIn, speed);
        
        
        $(_bodySelectors).animate(bodyAnimateIn, speed, function() {
            $pageslide.hide();
            _sliding = false;
            if( typeof callback !== 'undefined' ) callback();
	    	 // run custom function first
	        var aStart = $pageslide.data( 'afterStart' );
	        if( typeof aStart !== 'undefined' ) eval(aStart);
        });
    };
	
	/* Events */
	
	// Don't let clicks to the pageslide close the window
    $pageslide.click(function(e) {
        e.stopPropagation();
    });

	// Close the pageslide if the document is clicked or the users presses the ESC key, unless the pageslide is modal
	$(document).bind('click keyup', function(e) {
	    // If this is a keyup event, let's see if it's an ESC key
        if( e.type == "keyup" && e.keyCode != 27) return;
	    
	    // Make sure it's visible	    
        if (_isOpen) {
        	$.pageslide.close();
	    }
	});
	
	
	$(window).resize(function() {
        if (_isOpen) {
            if ($(window).width() > 568) {
            	$.pageslide.close();
			}
	    }
	});
	
})(jQuery);